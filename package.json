		"svelte-check": "^3.6.0",
		"svelte-preprocess": "^5.1.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/metropolis": "^5.0.7",
		"@unsass/breakpoint": "^2.4.0",
		"lucide-svelte": "^0.340.0",
		"modern-normalize": "^2.0.0",
		"nprogress": "^0.2.0",
		"pkce-gen": "^1.1.0",
		"sharp": "^0.33.2",
		"tippy.js": "^6.3.7"
	}
